{
  "name": "agent-payments",
  "version": "0.1.0",
  "description": "Payment infrastructure for AI agents - Telegram + Solana + Stripe",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "setup-devnet": "tsx scripts/setup-devnet.ts",
    "simulate": "tsx scripts/simulate-agent.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "grammy": "^1.21.1",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.11",
    "sql.js": "^1.10.2",
    "dotenv": "^16.4.1",
    "bs58": "^5.0.0"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "@types/node": "^20.11.16",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.2.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

